// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserMode {
  OPTED_IN
  OPTED_OUT
}

model User {
  id        BigInt @id
  mode      UserMode @default(OPTED_OUT)
  xp        BigInt @default(0)
  createdAt DateTime @default(now())
  lastMessage DateTime @default(now())
}